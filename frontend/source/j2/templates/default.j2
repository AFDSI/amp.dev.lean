<!doctype html>
<html amp lang="en">
<head>
    <meta charset="utf-8">
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <title>{{ doc.title }}</title>
    <link rel="canonical" href="{{ doc.url }}">
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Noto+Sans:400,700|Poppins:700" rel="stylesheet">
    <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style>
    <noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>

    {% block styles %}
    {# Some basic styling should always be present #}
    {% do doc.styles.addCssFile('css/base.css') %}
    {% do doc.styles.addCssFile('css/components/atoms/headline.css') %}
    {% do doc.styles.addCssFile('css/components/atoms/text.css') %}
    {% do doc.styles.addCssFile('css/components/atoms/anchor.css') %}

    {% do doc.styles.addCssFile('css/components/molecules/table.css') %}
    {% do doc.styles.addCssFile('css/components/molecules/code-snippet.css') %}
    {% endblock %}

    <style amp-custom>
     {{ doc.styles.emit() }}
    </style>
  </head>
  <body>
	  <svg style="position: absolute; width: 0; height: 0; overflow: hidden;" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
      <defs>
        {{ doc.icons.emit() }}
      </defs>
    </svg>
    
    <div class="grid-toggle">
        <input type="checkbox">
        <div class="toggle"><div class="dot"></div></div>
        <div class="grid"></div>
    </div>

    {% include 'partials/header.j2' %}

    {% block main %}
    <main>
      {% if not doc.html %}
      <h1>{{ doc.title }}</h1>
      <p>Nothing here yet ...</p>

      {% else %}
      {{ doc.html|render|safe }}
      {% endif %}
    </main>
    {% endblock %}

    {% block fonts %}
    <amp-font layout="nodisplay" font-family="Noto Sans" timeout="3000"></amp-font>
    <amp-font layout="nodisplay" font-family="Poppins" timeout="3000"></amp-font>
    {% endblock %}
  </body>
</html>
