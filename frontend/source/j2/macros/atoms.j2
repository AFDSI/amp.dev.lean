{% macro icon(name, size=3, fill='blue-ribbon', bg='transparent') -%}
	<div class="ad-a-ico ad-a-ico-{{ name }} ad-a-ico-{{ size }} ad-a-ico-{{ fill }} ad-a-ico-{{ bg }}">
	  <svg>
	    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#{{ name }}"></use>
	  </svg>
	</div>
{%- endmacro %}
