{% do doc.styles.addCssFile('css/components/molecules/format-visual.css') %}
{% do doc.styles.addCssFile('css/components/molecules/format-visual-email.css') %}
{% do doc.styles.addCssFile('css/components/molecules/code-snippet.css') %}

<div class="ad-m-format-visual ad-m-format-visual-email">
  <div class="ad-m-format-visual-image ad-m-format-visual-bottom-image">
    <amp-img class="ad--media" src="/static/img/amp-email-base.jpg" layout="responsive" width="1060" height="1670"></amp-img>
  </div>
  <div class="ad-m-format-visual-image ad-m-format-visual-top-image" title="<amp-email>">
    <amp-img src="/static/img/amp-email-top.jpg" layout="responsive" width="883" height="600"></amp-img>
  </div>
  <div class="ad-m-format-visual-code-snippet">
    {% set code_snippet = '
<button
  class="false"
  [class]="clicked"
  role="button" tabindex="0"
  on="tap:AMP.setState({
    clicked: !clicked
  })">
</button>
    ' %}
    {% set markdown = doc.pod.markdown %}
    {{ markdown.convert('```html\n' + code_snippet + '\n```')|safe }}
  </div>
</div>
